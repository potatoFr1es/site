{% extends 'base.html.twig' %}
{% set i = 1 %}
{% block body %}
        <table class="table table-dark" style="color: deepskyblue">
            <thead>
                <tr>
                    <th>â„–</th>
                    <th>Title</th>
                    <th><a href="?sort={% if sort == 'asc' %}desc{% else %}asc{% endif %}">Rating</a> </th>
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ i }}</td>
                    <td><a href="{{ post.id }}">{{ post.title }}</a></td>
                    <td style="color: {% if post.rating >= 0 %}limegreen{% else %}red{% endif %}; font-weight: bold; ">{{ post.rating }}</td>
                </tr>
                {% set i = i + 1 %}
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
