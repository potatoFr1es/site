{% extends 'base.html.twig' %}

{% block title %}Создание поста{% endblock %}

{% block body %}
    <form action="/post/create" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" id="title" placeholder="Name of your project">
        </div>
        <div class="form-group">
            <label for="photo">Link to the photo</label>
            <input class="form-control" type="text" name="photo" id="photo" placeholder="Link to the photo">
        </div>
        <div class="form-group">
            <label for="text">Lesson content</label>
            <textarea class="form-control" name="text" id="text" cols="30" rows="10" placeholder="Lesson content"></textarea>
        </div>
        <input type="submit" class="btn btn-success" value="Send" style="background: dodgerblue;">
    </form>
{% endblock %}
